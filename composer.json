{
  "description": "psr-7 example framework",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Alex",
      "email": "alex.bowey@yahoo.com"
    }
  ],
  "config": {
    "sort-packages": true,
    "process-timeout": 0
  },
  "require": {
    "php": ">=7.2.8",
    "psr/http-message": "^1.0",
    "roave/security-advisories": "dev-master",
    "zendframework/zend-diactoros": "^2.0",
    "zendframework/zend-httphandlerrunner": "^1.0"
  },
  "scripts": {
    "serv": "php -S localhost:8000 -t public"
  },
  "autoload": {
    "psr-4": {
      "Framework\\": "src/Framework/",
      "App\\": "src/App/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4"
  }
}
